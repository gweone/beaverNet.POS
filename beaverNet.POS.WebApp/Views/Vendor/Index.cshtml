@{
    ViewData["Title"] = "Vendor";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
@await Html.PartialAsync("_DataTables", new SearchModel()
{
    ApiUrl = Url.Content("api/vendor"),
    Columns = new[] {
        new SearchColumn(){
            name = "Name",
            displayname = "Name"
        },
        new SearchColumn(){
            name = "Description",
            displayname = "Description"
        },
        new SearchColumn(){
            name = "Phone",
            displayname = "Phone"
        },
        new SearchColumn(){
            name = "Email",
            displayname = "Email"
        },
        new SearchColumn(){
            name = "Address",
            displayname = "Address"
        },
        new SearchColumn(){
            name = "Address2",
            displayname = "Address2"
        },
        new SearchColumn(){
            searchable = false,
            orderable = false,
            displayname = "Tindakan"
        }
    },
    ColumnDefinition = @"'columnDefs': [{
                    'targets': -1,
                    'data': null,
                    'orderable': false,
                    'searchable':false,
                    'render': function (data, type, row, meta) {
                        return '<a href=""/vendor/Edit/' + data[6] + '""class=""btn btn-warning"">Edit</a>' +
                               '<a href=""/vendor/Details/' + data[6] + '""class=""btn btn-success"">Details</a>' +
                               '<a href=""/vendor/Delete/' + data[6] + '""class=""btn btn-danger"">Delete</a>';
                    }
                }]"
})
